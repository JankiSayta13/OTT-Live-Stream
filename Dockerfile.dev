FROM node:20-alpine

# install openssl
RUN apk add --no-cache openssl

WORKDIR /app

COPY package*.json ./
RUN npm ci

# copy everything & our entrypoint
COPY . .
COPY entrypoint.sh .

# use entrypoint.sh as the containerâ€™s start command
ENTRYPOINT ["./entrypoint.sh"]
